{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekly",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "matchManagers": ["pip_requirements", "pep621"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchManagers": ["pip_requirements", "pep621"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["breaking-change"]
    },
    {
      "matchPackageNames": ["cryptography", "pyopenssl"],
      "automerge": false,
      "labels": ["security-sensitive"]
    },
    {
      "matchPackageNames": ["yubikey-manager", "python-gnupg"],
      "groupName": "yubikey-deps"
    },
    {
      "matchPackageNames": ["pytest", "pytest-cov", "mypy", "ruff"],
      "groupName": "dev-tools",
      "automerge": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  }
}
